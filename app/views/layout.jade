        script(src='http://localhost:35729/livereload.js')
  body

    include header
    
    .container-fluid
      section(class="hidden")
        block content

    include footer

    script(type='text/javascript', src='/js/jquery.min.js')
    script(type='text/javascript', src='/js/functions.js')
