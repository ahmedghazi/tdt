extends layout

block content
    
    //pre #{user}
    .row
        .col-md-4
            
            h3 #{user.name}
            .hr3blue
        
            p Created on #{moment(user.createdAt).format('LLL')}
            
            
            if moment(user.updatedAt).isAfter(user.createdAt)
                p Updated at #{moment(user.updatedAt).format('LLL')}

        .col-md-8
            h2 MY TRICK LIST
            .hr3blue

            form(method="post" action="/u/#{user._id}" class="update")
                .form-group.repeater
                    each trick in user.tricks
                        if trick.name != ""
                            include inc/input-repeat-update
                
                .form-group.row
                    .col-md-12
                        button(type="button" class="btn btn-default add-row add-row-update") +
            
                .form-group.row
                    .col-md-12
                        input(type="submit" class="btn btn-default" value="Update") 

    

